<form class="form-sign" action="/auth/login" method="post">
    <img class="mb-4" src="https://elementary.io/images/icons/apps/128/system-software-install.svg" alt="" width="72"
         height="72">
    <h3 class="h3 mb-3 font-weight-normal">Вход в систему</h3>

    {{#if error}}
        <div class="alert alert-danger fade show" role="alert">
            {{error}}
        </div>
    {{/if}}

    {{#if info}}
        <div class="alert alert-warning fade show" role="alert">
            {{info}}
        </div>
    {{/if}}

    {{#if success}}
        <div class="alert alert-success fade show" role="alert">
            {{ success }}
        </div>
    {{/if}}

    <label for="inputEmail" class="sr-only">Email</label>
    <input name="email" type="email" id="inputEmail" class="form-control sign-top" placeholder="Email" required
           autofocus>
    <label for="inputPassword" class="sr-only">Пароль</label>
    <input name="password" type="password" id="inputPassword" class="form-control sign-bottom" placeholder="Пароль"
           required>


    <input type="hidden" name="_csrf" value="{{ csrf }}">

    <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    <p class="mt-3"><a href="/auth/register">Регистрация</a> <span style="color: #CED3DA">|</span> <a
            href="/auth/recover">Забыли пароль?</a></p>
    <!--    <p class="mt-3">Нет аккаунта? <a href="/auth/register">Зарегистрироваться</a></p>-->
    <!--    <p class="mt-3"><a href="/auth/recover">Забыли пароль?</a></p>-->
</form>