<form class="form-sign" action="/auth/reset" method="post">
    <img class="mb-4" src="https://elementary.io/images/icons/apps/128/system-software-install.svg" alt="" width="72"
         height="72">
    <h3 class="h3 mb-3 font-weight-normal">Изменение пароля</h3>

    {{#if error}}
        <div class="alert alert-danger fade show" role="alert">
            {{error}}
        </div>
    {{/if}}

    {{#if info}}
        <div class="alert alert-warning fade show" role="alert">
            {{info}}
        </div>
    {{/if}}

    {{#if success}}
        <div class="alert alert-success fade show" role="alert">
            {{ success }}
        </div>
    {{/if}}

    <label for="inputPassword" class="sr-only">Пароль</label>
    <input name="newPassword" type="password" id="inputPassword" class="form-control sign-top"
           placeholder="Введите новый пароль"
           required>
    <label for="repeatPassword" class="sr-only">Повторите пароль</label>
    <input name="repeatPassword" type="password" id="repeatPassword" class="form-control sign-bottom"
           placeholder="Повторите пароль"
           required>

    <input type="hidden" name="_csrf" value="{{ csrf }}">
    <input type="hidden" name="token" value="{{ token }}">

    <button class="btn btn-lg btn-primary btn-block" type="submit">Изменить пароль</button>
    <p class="mt-3"><a href="/auth/login">Я знаю пароль</a></p>
</form>